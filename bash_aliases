#!/bin/bash

# Easy directory navigation
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

# Some ls aliases
alias ll='ls -alhF'
alias la='ls -hA'
alias l='ls -CFh'

# rsync alias
alias cpv='rsync -ah --info=progress2'

# Add WSL integrations
alias sudo='sudo '
alias which='which '
alias open='explorer.exe'
alias xdg-open='explorer.exe'
alias copy='clip.exe'
alias xcopy='clip.exe'